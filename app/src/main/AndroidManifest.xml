<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".common.LogProcessorApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FP_LogProcessor"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FP_LogProcessor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".core.infrastructure.providers.LogContentProvider"
            android:authorities="com.homedepot.sa.xp.logprocessor.logs.provider"
            android:exported="true"
            tools:ignore="ExportedContentProvider" />

        <provider
            android:name=".core.infrastructure.providers.LogContentProvider"
            android:authorities="com.homedepot.sa.xp.testlibrary.logs.provider"
            android:exported="true"
            tools:ignore="ExportedContentProvider" />
    </application>

</manifest>